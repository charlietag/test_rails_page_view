<p id="notice"><%= notice %></p>
<!-- <h1>Vistor (Unique): <%#= Impression.where(controller_name: 'books').select(:session_hash).distinct.count %></h1> -->
<%= pie_chart Impression.where(controller_name: 'books').group(:action_name).count %>
<h1>Vistor: <%= Impression.where(controller_name: 'books', action_name: 'index').count %></h1>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Impressions</th>
      <!-- <th>Impressions (Unique)</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.impressions_count %></td>
        <!-- <td><%#= book.impressionist_count filter: :session_hash %></td> -->
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

